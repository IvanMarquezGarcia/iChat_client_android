<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root_VBox" alignment="TOP_CENTER" maxHeight="600.0" maxWidth="530.0" minHeight="600.0" minWidth="530.0" prefHeight="600.0" prefWidth="530.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="info_Hbox" alignment="TOP_CENTER" prefWidth="605.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="info_Text" strokeType="OUTSIDE" strokeWidth="0.0" text="Conectado como " textAlignment="CENTER">
               <font>
                  <Font name="Consolas" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
            </Text>
            <Text fx:id="nombre_Text" strokeType="OUTSIDE" strokeWidth="0.0" text="anónimo" textAlignment="CENTER">
               <font>
                  <Font name="Consolas" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
      <ScrollPane fx:id="mensajes_scrollPane" VBox.vgrow="ALWAYS">
         <content>
            <TextArea fx:id="mensajes_textArea" editable="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="519.0" prefWidth="528.0" promptText="Los mensajes que escribas tú y el resto se verán aquí" wrapText="true">
               <font>
                  <Font name="Consolas Bold" size="15.0" />
               </font>
            </TextArea>
         </content>
      </ScrollPane>
      <HBox fx:id="input_HBox" alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="530.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="input_textField" prefHeight="45.0" prefWidth="471.0" promptText="Escribe algo" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Consolas Bold" size="12.0" />
               </font>
            </TextField>
            <Button fx:id="enviar_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#enviar_buttonFXClicked" prefHeight="45.0" prefWidth="59.0" text="Enviar" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Consolas Bold Italic" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
