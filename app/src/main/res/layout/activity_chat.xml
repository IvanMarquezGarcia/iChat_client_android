<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    tools:context=".ChatActivity">

    <EditText
        android:id="@+id/chat_input_edittext"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Send a message!"
        android:inputType="textShortMessage"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat_send_imagebutton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/chat_send_imagebutton"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:onClick="send"
        app:layout_constraintBottom_toBottomOf="@+id/chat_input_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chat_input_edittext"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_mssgs_recyclerview"
        android:layout_width="0dp"
        android:layout_height="555dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_top_divider" />

    <View
        android:id="@+id/chat_top_divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gold_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_username_textview" />

    <TextView
        android:id="@+id/chat_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Username"
        android:textColor="@color/gray_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_top_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="Conectado como"
        android:textColor="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="@+id/chat_username_textview"
        app:layout_constraintEnd_toStartOf="@+id/chat_username_textview"
        app:layout_constraintTop_toTopOf="@+id/chat_username_textview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chat_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="error msg"
        android:textColor="@color/red_error"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/chat_input_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_mssgs_recyclerview" />

    <View
        android:id="@+id/chat_bottom_divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="@color/gold_light"
        app:layout_constraintBottom_toTopOf="@+id/chat_input_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_mssgs_recyclerview"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>